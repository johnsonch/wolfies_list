<h1>Listing ads</h1>
<% if logged_in? %>
<br>
<%= link_to 'New Ad', new_user_ad_path(current_user) %>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Address</th>
      <% if logged_in? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= link_to ad.title, ad %></td>
        <td><%= link_to ad.description, ad %></td>
        <td><%= link_to ad.price, ad %></td>
        <td><%= link_to ad.address, ad %></td>
        <% if logged_in? %>
          <td><%= link_to 'Edit', edit_user_ad_path(current_user, ad) %></td>
        <td><%= link_to 'Destroy', user_ad_path(current_user, ad), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


